doctype html
html.no-js
  head
    meta charset='utf-8'
    title TestApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield :head
  body
    = render 'partials/flash' if flash.any?
    = yield
    = yield :footer