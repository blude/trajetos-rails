<p id="notice"><%= notice %></p>

<h1>Listing Point Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_types.each do |point_type| %>
      <tr>
        <td><%= link_to 'Show', point_type %></td>
        <td><%= link_to 'Edit', edit_point_type_path(point_type) %></td>
        <td><%= link_to 'Destroy', point_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

