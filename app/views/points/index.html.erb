<p id="notice"><%= notice %></p>

<h1>Listing Points</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Coords</th>
      <th>Linha</th>
      <th>Ordem</th>
      <th>Visível na lista</th>
      <th>Visível no mapa</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.point_type_id %></td>
        <td><%= point.coords %></td>
        <td><%= point.trip.headsign %></td>
        <td><%= point.position %></td>
        <td><%= point.hidden_from_list %></td>
        <td><%= point.hidden_from_map %></td>
        <td><%= link_to 'Show', point %></td>
        <td><%= link_to 'Edit', edit_point_path(point) %></td>
        <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

